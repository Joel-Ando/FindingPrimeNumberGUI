<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.findingprimenumbergui.HelloController">

        <HBox  alignment="CENTER" spacing="10" style="10">
                <Label text="Prime# From:"
                       GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField
                        GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="input1"/>
                <Label text=" To:"
                   GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                 <TextField
                        GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="input2"/>

            <Button onAction="#generatePrimeNumber" text="Submit" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Button onAction="#resetGridPane" text="ResetGrid" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </HBox>
        <GridPane fx:id="gridPane" alignment="CENTER" hgap="10" vgap="10" />
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="    The Prime numbers are: "
                      GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label fx:id="primeLabel"
                   GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        </HBox>
    </VBox>





